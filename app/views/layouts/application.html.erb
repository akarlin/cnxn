  <script type="text/javascript">
      var currentName = "Name";
      var currentTeam = "Team";
      function initialize() {
              var mapOptions = {
              styles: [ { "featureType": "administrative.country", "elementType": "geometry.stroke", "stylers": [ { "color": "#343434" }, { "weight": 2 }, { "visibility": "on" } ] },{ "featureType": "administrative", "elementType": "labels", "stylers": [ { "visibility": "off" } ] },{ "featureType": "water", "stylers": [ { "color": "#343434" } ] },{ "featureType": "landscape", "stylers": [ { "color": "#ff0000" } ] },{ "featureType": "poi", "stylers": [ { "color": "#ff0000" } ] },{ "featureType": "road", "stylers": [ { "visibility": "off" } ] },{ } ],
              center: new google.maps.LatLng(38.0, -97.0),
              zoom: 3,
              mapTypeId: google.maps.MapTypeId.ROADMAP
              };
              var map = new google.maps.Map(document.getElementById("map_canvas"),
                      mapOptions);
              map.draggable=false;
              map.disableDefaultUI = false;
              map.overviewMapControl = false;
              map.zoomControl = false;
              map.streetViewControl = false;
              map.mapTypeControl = false;
              map.keyboardShortcuts = false;
              map.scrollwheel = false;
              map.disableDoubleClickZoom = true;

              var marker = new Array(new google.maps.Marker({ position: (new google.maps.LatLng(29.59577,-90.719535)), map: map, title:"A", team: "Eagles" }),
                                     new google.maps.Marker({ position: (new google.maps.LatLng(-22.363882,131.044922)), map: map, title:"B", team: "Eagles" }),
                                     new google.maps.Marker({ position: (new google.maps.LatLng(-23.363882,131.044922)), map: map, title:"C", team: "Eagles" }),
                                     new google.maps.Marker({ position: (new google.maps.LatLng(-25.363882,131.044922)), map: map, title:"D", team: "Eagles" }));

              google.maps.event.addListener(marker, 'click', function() {
                  currentName = marker.title;
                  currentTeam = marker.team;
              });


          }



  </script>

